    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.myfinapp.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_chart"
        android:name="com.example.myfinapp.ui.chart.ChartControlFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_chart_control" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.myfinapp.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
