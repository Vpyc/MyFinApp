<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Картинка -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/profileImageView"
            android:src="@drawable/ic_fin"
            android:layout_height="220dp"
            android:layout_width="220dp"/>

    </FrameLayout>
    <LinearLayout
        android:id="@+id/subscriptionSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <!-- Базовая или Премиум подписка -->
        <TextView
            android:id="@+id/subscriptionTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ваша подписка: Базовая подписка"
            android:padding="20dp"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <!-- Дата окончания подписки -->
        <TextView
            android:id="@+id/subscriptionEndDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Не активна"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <!-- Категории -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_category"
                android:layout_marginEnd="16dp"
                app:tint="@color/purple_500" />

            <TextView
                android:id="@+id/categoriesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Категории"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <!-- Карты -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_card"
                android:layout_marginEnd="16dp"
                app:tint="@color/purple_500"/>

            <TextView
                android:id="@+id/mapsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Карты"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <!-- Категории -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person"
                android:layout_marginEnd="16dp"
                app:tint="@color/purple_500" />

            <TextView
                android:id="@+id/accountTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Настройка аккаунта"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <!-- Карты -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notifications_black_24dp"
                android:layout_marginEnd="16dp"
                app:tint="@color/purple_500"/>
            <TextView
                android:id="@+id/notificationTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Настройка уведомлений"
                android:textSize="18sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>